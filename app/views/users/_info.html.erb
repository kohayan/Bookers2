		<div class="col-lg-3">

			<h2>User info</h2>

			<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
			<table class="table">
				<tr>
					<td>
						<strong>name</strong>
					</td>
					<td>
						<%= user.name %>
					</td>
				</tr>
				<tr>
					<td>
						<strong>introduction</strong>
					</td>
					<td>
						<%= user.introduction %>
					</td>
				</tr>
			</table>
			<div class="row">
				<% if user.id == current_user.id %>
				<%= link_to edit_user_path(user), class: 'col-lg-12 btn btn-default' do %>
				<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
				<% end %>
				<% end %>
			</div>


			<h2>New book</h2>
			<%= form_for(book) do |f| %>
			<div class="row">
				<h5>Title</h5>
				<%= f.text_field :title, class: "col-lg-12" %>
			</div>

			<div class="row">
				<h5>Body</h5>
				<%= f.text_field :body, class: "col-lg-12" %>
			</div>

			<div class="row">
				<%= f.submit 'Create Book', class: "col-lg-12 btn btn-primary" %>
			</div>
			<% end %>

		</div>

